@model IEnumerable<Cinema_Mvc.Models.Cinema>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cinemas</h2>

<span class="form-inline">
    @Html.ActionLink("Criar novo", "Create")

    @using (Html.BeginForm())
    {
        <span class="pull-right">
            Filtrar por nome: @Html.TextBox("SearchString")
            <input type="submit" value="Buscar" />
        </span>
    }
</span>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Nome", "Index", new { sortOrder = ViewBag.NomeSortParm })
        </th>
        <th>
            @Html.ActionLink("Endereco", "Index", new { sortOrder = ViewBag.EnderecoSortParm })
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Endereco)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.CinemaID }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.CinemaID }) |
            @Html.ActionLink("Apagar", "Delete", new { id=item.CinemaID })
        </td>
    </tr>
}

</table>
